{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "metal-icons-monorepo",
      "components": ["root", "metal-icons", "website"]
    },
    {
      "type": "node-workspace",
      "merge": false
    }
  ],
  "packages": {
    ".": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "component": "root",
      "include-component-in-tag": false
    },
    "packages/metal-icons": {
      "release-type": "node",
      "package-name": "metal-icons",
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "component": "metal-icons"
    },
    "packages/website": {
      "release-type": "node",
      "package-name": "website",
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "component": "website"
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Added",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Fixed",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    },
    {
      "type": "style",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "test",
      "section": "Changed",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "ci",
      "section": "Changed",
      "hidden": true
    }
  ]
}
