{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": false,
      "extra-files": [
        {
          "type": "json",
          "path": "package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "packages/metal-icons/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "packages/website/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "packages/website/package.json",
          "jsonpath": "$.dependencies.metal-icons"
        }
      ]
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Added",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Fixed",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    },
    {
      "type": "style",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "test",
      "section": "Changed",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Changed",
      "hidden": false
    },
    {
      "type": "ci",
      "section": "Changed",
      "hidden": true
    }
  ]
}
