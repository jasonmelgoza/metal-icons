{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "optimize": "yarn optimize:line:16 && yarn optimize:line:24 && yarn optimize:solid:16 && yarn optimize:solid:24",
    "construct": "yarn construct:line:16 && yarn construct:line:24 && yarn construct:solid:16 && yarn construct:solid:24",
    "optimize:line:16": "rimraf ./optimized/16/outline && svgo --config=svgo.config.mjs -q -p 8 -f ./raw/16/outline -o ./optimized/16/outline",
    "optimize:line:24": "rimraf ./optimized/24/outline && svgo --config=svgo.config.mjs -q -p 8 -f ./raw/24/outline -o ./optimized/24/outline",
    "optimize:solid:16": "rimraf ./optimized/16/solid && svgo --config=svgo.config.mjs -q -p 8 -f ./raw/16/solid -o ./optimized/16/solid",
    "optimize:solid:24": "rimraf ./optimized/24/solid && svgo --config=svgo.config.mjs -q -p 8 -f ./raw/24/solid -o ./optimized/24/solid",
    "construct:line:16": "rimraf ./packages/metal-icons/src/16/outline && svgr --out-dir packages/metal-icons/src/16/outline -- optimized/16/outline",
    "construct:line:24": "rimraf ./packages/metal-icons/src/24/outline && svgr --out-dir packages/metal-icons/src/24/outline -- optimized/24/outline",
    "construct:solid:16": "rimraf ./packages/metal-icons/src/16/solid && svgr --out-dir packages/metal-icons/src/16/solid -- optimized/16/solid",
    "construct:solid:24": "rimraf ./packages/metal-icons/src/24/solid && svgr --out-dir packages/metal-icons/src/24/solid -- optimized/24/solid"
  },
  "devDependencies": {
    "@svgr/cli": "^8.0.1",
    "@svgr/core": "^8.0.0",
    "rimraf": "^5.0.1",
    "svgo": "^3.0.2"
  }
}
